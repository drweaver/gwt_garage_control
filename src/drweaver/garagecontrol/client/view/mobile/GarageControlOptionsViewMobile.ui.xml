<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.big-button {
			height: 30px;
			font-size: 10pt;
			width: 100%;
		}
	</ui:style>
	<g:HTMLPanel>
		<center>
			<g:VerticalPanel spacing="15" width="100%" >
				<g:Button addStyleNames='{style.big-button}' text="Log out" ui:field="buttonLogout" />
				<g:Button addStyleNames='{style.big-button}' text="Refresh" ui:field="buttonRefresh" />
			</g:VerticalPanel>
		</center>
	</g:HTMLPanel>
</ui:UiBinder> 